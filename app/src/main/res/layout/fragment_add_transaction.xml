<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".Fragments.AddTransactionFragment"
    android:background="@color/black_background">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/learnloop_icon"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="10dp"
                    app:srcCompat="@drawable/learnloop_icon" />

            </RelativeLayout>

            <TextView
                android:id="@+id/heyNameTV2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="40dp"
                android:fontFamily="@font/apoppins"
                android:text="Add a transaction"
                android:textColor="@color/white"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/textView16"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="40dp"
                android:fontFamily="@font/apoppins"
                android:text="Let's get recording!"
                android:textColor="@color/hint"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/askAllowanceTV3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="40dp"
                android:fontFamily="@font/apoppins"
                android:text="Flow of Transaction"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <RadioGroup
                android:id="@+id/rg_transactionFlow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="40dp">

                <RadioButton
                    android:id="@+id/rb_inFlow"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Inflow"
                    android:textColor="@color/white"
                    android:fontFamily="@font/thin_poppins"
                    android:padding="3dp" />

                <RadioButton
                    android:id="@+id/rb_outFlow"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Outflow"
                    android:textColor="@color/white"
                    android:fontFamily="@font/thin_poppins"
                    android:padding="3dp" />
            </RadioGroup>

            <TextView
                android:id="@+id/askAllowanceTV2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="40dp"
                android:fontFamily="@font/apoppins"
                android:text="Title"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/editTxt_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="text"
                android:hint="eg. Potato Corners"
                android:textColorHint="@color/hint"
                android:background="@drawable/rounded_rect_10"
                android:padding="15dp"
                android:fontFamily="@font/thin_poppins"
                android:drawableLeft="@drawable/ic_baseline_article_24"
                android:drawablePadding="20dp"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="40dp"
                android:layout_marginBottom="10dp"
                android:gravity="center_vertical"
                android:textSize="20dp"
                android:scrollHorizontally="false"
                android:singleLine="false" />

            <TextView
                android:id="@+id/askAllowanceTV5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="40dp"
                android:fontFamily="@font/apoppins"
                android:text="Amount"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/editTxt_amount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="numberDecimal"
                android:hint="eg. 100.90"
                android:digits="1234567890."
                android:textColorHint="@color/hint"
                android:background="@drawable/rounded_rect_10"
                android:padding="15dp"
                android:fontFamily="@font/thin_poppins"
                android:drawableLeft="@drawable/ic_baseline_attach_money_24"
                android:drawablePadding="20dp"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="40dp"
                android:layout_marginBottom="10dp"
                android:gravity="center_vertical"
                android:textSize="20dp"
                android:scrollHorizontally="false"
                android:singleLine="false" />

            <TextView
                android:id="@+id/askAllowanceTV6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="40dp"
                android:fontFamily="@font/apoppins"
                android:text="Purpose"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <RadioGroup
                android:id="@+id/rg_transactionPurpose"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="40dp">

                <RadioButton
                    android:id="@+id/rb_foodAndDrink"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Food and Drinks"
                    android:textColor="@color/white"
                    android:fontFamily="@font/thin_poppins"
                    android:padding="3dp" />

                <RadioButton
                    android:id="@+id/rb_entertainment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Entertainment"
                    android:textColor="@color/white"
                    android:fontFamily="@font/thin_poppins"
                    android:padding="3dp" />

                <RadioButton
                    android:id="@+id/rb_transport"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Transport"
                    android:textColor="@color/white"
                    android:fontFamily="@font/thin_poppins"
                    android:padding="3dp" />

                <RadioButton
                    android:id="@+id/rb_shopping"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Shopping"
                    android:textColor="@color/white"
                    android:fontFamily="@font/thin_poppins"
                    android:padding="3dp" />

                <RadioButton
                    android:id="@+id/rb_groceries"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Groceries"
                    android:textColor="@color/white"
                    android:fontFamily="@font/thin_poppins"
                    android:padding="3dp" />

                <RadioButton
                    android:id="@+id/rb_subscription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Subscription"
                    android:textColor="@color/white"
                    android:fontFamily="@font/thin_poppins"
                    android:padding="3dp" />

                <RadioButton
                    android:id="@+id/rb_investment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Investment"
                    android:textColor="@color/white"
                    android:fontFamily="@font/thin_poppins"
                    android:padding="3dp" />

                <RadioButton
                    android:id="@+id/rb_others"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Others"
                    android:textColor="@color/white"
                    android:fontFamily="@font/thin_poppins"
                    android:padding="3dp" />

            </RadioGroup>

            <TextView
                android:id="@+id/askAllowanceTV7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="40dp"
                android:fontFamily="@font/apoppins"
                android:text="Description"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/editTxt_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="text"
                android:hint="eg. Size, Type, Color"
                android:digits="1234567890."
                android:textColorHint="@color/hint"
                android:background="@drawable/rounded_rect_10"
                android:padding="15dp"
                android:fontFamily="@font/thin_poppins"
                android:drawableLeft="@drawable/ic_baseline_description_24"
                android:drawablePadding="20dp"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="40dp"
                android:layout_marginBottom="10dp"
                android:gravity="center_vertical"
                android:textSize="20dp"
                android:scrollHorizontally="false"
                android:singleLine="false" />

            <TextView
                android:id="@+id/askAllowanceTV8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="40dp"
                android:fontFamily="@font/apoppins"
                android:text="Snap a pic!"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/btn_uploadTransaction"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="40dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/rounded_rect_10"
                android:padding="10dp"
                android:src="@drawable/image_upload"
                tools:ignore="SpeakableTextPresentCheck,SpeakableTextPresentCheck" />

            <TextView
                android:id="@+id/askAllowanceTV9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="40dp"
                android:fontFamily="@font/apoppins"
                android:text="Where did you make this purchase?"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="40dp"
                android:layout_gravity="center">

                <TextView
                    android:id="@+id/txtView_location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:layout_marginBottom="10dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/rounded_rect_10"
                    android:drawableLeft="@drawable/ic_baseline_location_on_24"
                    android:drawablePadding="20dp"
                    android:fontFamily="@font/thin_poppins"
                    android:padding="15dp"
                    android:textColor="@color/white"
                    android:textSize="15dp"
                    android:hint="Get location Button ->"
                    android:gravity="center_vertical"
                    android:textColorHint="@color/hint"/>

                <ImageButton
                    android:id="@+id/btn_getLocation"
                    android:layout_width="48dp"
                    android:layout_height="55dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_weight="1"
                    android:background="@drawable/round_rect_10_orange"
                    android:src="@drawable/ic_baseline_my_location_24"
                    tools:ignore="SpeakableTextPresentCheck,SpeakableTextPresentCheck,TouchTargetSizeCheck" />

            </LinearLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_barCodeScanner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="40dp"
                android:backgroundTint="@color/blue"
                android:fontFamily="@font/thin_poppins"
                android:padding="10dp"
                android:text="Scan Bar Code"
                android:visibility="gone"
                android:textAllCaps="false"
                android:textSize="20sp"
                app:cornerRadius="30dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_recordDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="40dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="100dp"
                android:backgroundTint="@color/blue"
                android:fontFamily="@font/thin_poppins"
                android:padding="10dp"
                android:text="Record it!"
                android:textAllCaps="false"
                android:textSize="20sp"
                app:cornerRadius="30dp" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>

