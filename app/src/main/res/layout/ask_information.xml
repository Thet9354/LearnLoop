<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_background"
    tools:context=".Onboarding.AskInformationActivity"
    >

    <RelativeLayout
        android:id="@+id/logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp">

        <ImageView
            android:id="@+id/learnloop_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            app:srcCompat="@drawable/learnloop_icon" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/learnloop_icon"
            android:fontFamily="@font/montserrat_med"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:text="L E A R N L O O P"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/white"/>

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/logo"
        tools:ignore="SpeakableTextPresentCheck">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/heyNameTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="40dp"
                android:fontFamily="@font/apoppins"
                android:text="Hey -name-!"
                android:textColor="@color/white"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/TextView1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="We want to know more about you!"
                android:textSize="15dp"
                android:textColor="@color/hint"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="40dp"
                android:fontFamily="@font/apoppins"/>

            <TextView
                android:id="@+id/askAllowanceTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="40dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/apoppins"
                android:text="What's your allowance?"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/allowance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="40dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/rounded_rect_10"
                android:drawablePadding="20dp"
                android:ems="10"
                android:fontFamily="@font/thin_poppins"
                android:gravity="center_vertical"
                android:hint="Number only (eg. 100)"
                android:drawableLeft="@drawable/ic_baseline_account_balance_wallet_24"
                android:inputType="number"
                android:padding="15dp"
                android:textColor="@color/white"
                android:textColorHint="@color/hint"
                android:textSize="20sp" />

            <RadioGroup
                android:id="@+id/allowanceType"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="40dp">

                <RadioButton
                    android:id="@+id/dailyAllowance"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Daily"
                    android:layout_marginStart="5dp"
                    android:textColor="@color/white"
                    android:textSize="15dp"
                    android:padding="3dp"
                    android:fontFamily="@font/thin_poppins"/>

                <RadioButton
                    android:id="@+id/weeklyAllowance"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:text="Weekly"
                    android:textColor="@color/white"
                    android:textSize="15dp"
                    android:padding="3dp"
                    android:fontFamily="@font/thin_poppins"/>

                <RadioButton
                    android:id="@+id/monthlyAllowance"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:text="Monthly"
                    android:textColor="@color/white"
                    android:textSize="15dp"
                    android:padding="3dp"
                    android:fontFamily="@font/thin_poppins"/>
            </RadioGroup>

            <TextView
                android:id="@+id/askBudgetTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="40dp"
                android:fontFamily="@font/apoppins"
                android:text="What is your budget goal?"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="(in a Monthly Timeframe)"
                android:textSize="15dp"
                android:textColor="@color/hint"
                android:textStyle="italic"
                android:fontFamily="@font/thin_poppins"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="40dp"/>

            <EditText
                android:id="@+id/budget"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="40dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/rounded_rect_10"
                android:drawableLeft="@drawable/ic_baseline_mail_outline_24"
                android:drawablePadding="20dp"
                android:ems="10"
                android:fontFamily="@font/thin_poppins"
                android:gravity="center_vertical"
                android:hint="Number only (eg. 100)"
                android:inputType="textEmailAddress"
                android:padding="15dp"
                android:textColor="@color/white"
                android:textColorHint="@color/hint"
                android:textSize="20sp"
                tools:ignore="SpeakableTextPresentCheck" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/completeRegister_Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/blue"
                android:fontFamily="@font/thin_poppins"
                android:padding="10dp"
                android:text="Register"
                android:textAllCaps="false"
                android:textSize="20sp"
                app:cornerRadius="30dp"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="40dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>